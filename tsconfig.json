{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/schema.ts"]
}
